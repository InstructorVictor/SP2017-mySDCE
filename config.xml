<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.campos.mysdce" version="1.1.20170427" android-versionCode="1" ios-CFBundleVersion="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mySDCE</name>
    <description>
        The unofficial SDCE app.
    </description>
    <author email="victor@victorapps.com" href="http://victorapps.com">
        Campos Apps, LLC. 
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="BackgroundColor" value="0xffabcdef" />
	<preference name="Orientation" value="portrait" />
	<icon src="res/icon.png" />
	<preference name="SplashScreenDelay" value="10000" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-targetSdkVersion" value="14" />
		<splash src="res/screen/android/1920-splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    <engine name="browser" spec="~4.1.0" />
</widget>
